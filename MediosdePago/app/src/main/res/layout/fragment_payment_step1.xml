<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_container"
    android:padding="@dimen/default_padding"
    tools:context="ar.com.leandrolopez.mediosdepago.PaymentStep1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:elevation="@dimen/box_elevation"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingLeft="@dimen/box_padding"
        android:paddingRight="@dimen/box_padding"
        android:paddingTop="40dp">

        <TextView
            style="@style/boxTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_monto" />

        <EditText
            android:id="@+id/editMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="@string/button_siguiente" />
    </LinearLayout>
</RelativeLayout>
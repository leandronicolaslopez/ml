<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boxTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#fba703</item>
    </style>

    <style name="box">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/box_elevation</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:paddingRight">@dimen/box_padding</item>
        <item name="android:paddingLeft">@dimen/box_padding</item>
    </style>

    <style name="btnPrimary">
        <item name="android:paddingLeft">@dimen/margin_xl</item>
        <item name="android:paddingRight">@dimen/margin_xl</item>
        <item name="android:paddingTop">@dimen/margin_l</item>
        <item name="android:paddingBottom">@dimen/margin_l</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_primary_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_ok">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/green_ok</item>
    </style>

</resources>
